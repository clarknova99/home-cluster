    k8s_gateway ${SECRET_DOMAIN} {
        apex k8s-gateway.networking
        resources Ingress Service
        ttl 300
        fallthrough ${SECRET_DOMAIN}
    }
    forward ${SECRET_DOMAIN} 192.168.1.1
    cache 300
    loop
    reload
    loadbalance
}
