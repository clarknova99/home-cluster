    errors
    health {
        lameduck 5s
    }
    ready
    log . {
        class error
    }
    prometheus :9153
    hosts {
        ${CLUSTER_API_IP} k8s.${SECRET_DOMAIN}
        ttl 300
        fallthrough ${SECRET_DOMAIN}
